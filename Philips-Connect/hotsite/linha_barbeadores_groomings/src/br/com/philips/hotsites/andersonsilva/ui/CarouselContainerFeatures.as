package br.com.philips.hotsites.andersonsilva.ui{	import com.greensock.TweenMax;	import com.greensock.easing.Strong;	import com.greensock.loading.LoaderMax;	import com.gugateider.framework.utils.TextUtils;		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.events.Event;	import flash.events.MouseEvent;	import flash.text.TextField;		public class CarouselContainerFeatures extends Sprite	{		private var saibaMaisButton:MovieClip;		private var dashedLines:MovieClip;		private var container:Sprite;				private var data:XMLList;		private var features:Array = new Array();				public function CarouselContainerFeatures()		{			super();						container = new Sprite();			container.x = 814;			container.y = 330;			addChild( container );						var dashedClass:Class = LoaderMax.getLoader("library").getClass("CarouselFeatures");			dashedLines  = new dashedClass();			addChild( dashedLines );									var saibaMaisClass:Class = LoaderMax.getLoader("library").getClass("SaibaMaisButton");			saibaMaisButton = new saibaMaisClass();			saibaMaisButton.x = 566;			saibaMaisButton.y = 200;			saibaMaisButton.buttonMode = true;			saibaMaisButton.addEventListener(MouseEvent.MOUSE_OVER , saibaMaisRollOverHandler );			saibaMaisButton.addEventListener(MouseEvent.MOUSE_OUT  , saibaMaisRollOutHandler );			saibaMaisButton.addEventListener(MouseEvent.CLICK     , saibaMaisClickHandler );			addChild( saibaMaisButton );					}				private function saibaMaisClickHandler(e:MouseEvent):void 		{			dispatchEvent( new Event(Event.SELECT) );		}				private function saibaMaisRollOverHandler(e:MouseEvent):void 		{			TweenMax.to( saibaMaisButton.mais , .5 , { scaleX: 1.6, scaleY: 1.6, ease: Strong.easeOut, rotation: -45 });		}				private function saibaMaisRollOutHandler(e:MouseEvent):void 		{			TweenMax.to( saibaMaisButton.mais , .5 , { scaleX: 1, scaleY: 1, ease: Strong.easeOut, rotation: 0 });		}				public function create($data:XMLList):void 		{			data = $data;						// TweenMax.to( this , 0 , {autoAlpha: 1 });			TweenMax.to( dashedLines , .5 , {autoAlpha: 1});			TweenMax.to( saibaMaisButton , .5 , {autoAlpha: 1});			TweenMax.to( container , .5 , {autoAlpha: 1});			//TweenMax.fromTo( saibaMaisButton , .5 , { autoAlpha: 0, y: 180, scaleY: .5}, { autoAlpha: 1, y: 200, scaleY: 1, ease: Strong.easeOut });						// remove all within container 			for(var i:int = 0; i < features.length; i++)				container.removeChild( Sprite( features[i] ) );						updateFeatures();					}				private function updateFeatures():void 		{			var sp:Sprite;			var colour:uint; // #006600			var yPos:Number=0;			features = new Array();			for(var i:int = 0; i < data.feature.length(); i++)			{				if(i%2==0)  colour = 0x1C5261;				else colour = 0x2F89AC;								sp = drawFeatureItem( colour , data.feature[i].text() );				sp.y = yPos; 				container.addChild( sp );								yPos += sp.height;								features.push( sp );							}		}				private function drawFeatureItem( color:uint = 0 , text:String="" ):Sprite 		{			var tf:TextField = TextUtils.createTf( text , false , 144, 56 );			tf.x = 5;			tf.y = 5;						var sp:Sprite = new Sprite();			sp.graphics.beginFill( color , 1 );			sp.graphics.drawRect(0 , 0 , 164, tf.height + 10 );			sp.graphics.endFill();			sp.addChild( tf );						return sp;		}						public function remove():void 		{						TweenMax.to( dashedLines , .3 , {autoAlpha: 0});			TweenMax.to( saibaMaisButton , .3 , {autoAlpha: 0});			TweenMax.to( container , .3 , {autoAlpha: 0});					}				public function get id():String { 			return data.id.text();		}					}}